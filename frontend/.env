# .env файл для ФРОНТЕНДУ (React)

# Порт фронтенду
PORT=3001

# URL бекенду (якщо не використовуєте proxy)
REACT_APP_API_URL=http://localhost:3002

# Вимкнути відкриття браузера при старті
BROWSER=none

# Вимкнути генерацію source maps для швидшої збірки
GENERATE_SOURCEMAP=false

# Режим розробки
NODE_ENV=development

# Вимкнути ESLint попередження як помилки
ESLINT_NO_DEV_ERRORS=true

# Показувати всі ESLint попередження
EXTEND_ESLINT=true

# Швидше оновлення при змінах
FAST_REFRESH=true

# Вимкнути перевірку типів TypeScript (якщо використовуєте)
TSC_COMPILE_ON_ERROR=true

# Налаштування webpack dev server
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3001